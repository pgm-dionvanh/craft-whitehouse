<div class="flex flex-col m-2 p-4 border-2 border-wh-blue rounded-lg">
    <span class="text-wh-blue text-lg"> {{ "news.stay" |t }} </span>
    <div class="flex flex-col gap-1 mb-1 mt-4">
        <label> {{ "news.email" |t }}*</label>
        <input type="text" class="bg-slate-300 placeholder:text-slate-500 rounded-lg p-2"
            placeholder="example@example.com" />
    </div>
    <div class="flex flex-col gap-1">
        <label> {{ "news.zipcode" |t }}*</label>
        <input type="text" class="bg-slate-300 placeholder:text-slate-500 rounded-lg p-2" placeholder="{{ "news.zipcode" |t }}" />
    </div>
    <button class="bg-wh-blue text-white p-4 mt-4 rounded-full">{{ "news.signup" |t }}</button>
    <a class="mt-6 mb-4 text-wh-blue hover:text-red-800 underline underline-offset-8">{{ "news.optin" |t }}</a>
</div>