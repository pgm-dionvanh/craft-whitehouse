{% extends "/layouts/_main" %}

{% block content %}
<section class="mt-32">
    <div class="grid grid-cols-2">
        <div>
            <img class="bg-cover"  src={{ entry.asset.one().getUrl }} class="lazy-load object-fit-cover" alt="">
        </div>
        <div class="flex justify-center items-center flex-col">
            <h1 class="text-wh-blue text-center text-4xl mb-4 font-bold"> {{ entry.title }} </h1>
            <p class="text-wh-blue text-center text-[13px] mb-4 font-bold"> {{ entry.tag }} </p>
            <h2 class="text-wh-blue text-center text-sm mb-4 font-bold"> {{ entry.description }} </h2>

        </div>
    </div>
    <div class="m-auto mt-12 max-w-4xl">
        {{ entry.richText }}
    </div>
</section>
{% endblock %}