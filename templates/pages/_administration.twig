{% set title = entry.title %}

{% set allMembers = craft.entries.section('detailAdministration').all() %}
{% extends "/layouts/_main" %}


{% block content %}
    <section class="mt-32">
        <h1 class="m-auto max-w-4xl text-wh-blue mt-8 text-center text-5xl font-bold mb-12 w-1/4">{{ entry.title }}</h1>
        <h1 class="m-auto max-w-4xl text-wh-blue w-1/3"> {{ entry.richText }} </h1>
        <div class="m-auto mt-12 max-w-4xl flex justify-center gap-4 wrap">
        {% cache %}
            {% for member in allMembers %}
                <a href="{{ member.url }}" class="transition ease-in-out delay-350 hover:-translate-y-4 duration-800">
                    <img class="rounded-md" src={{ member.asset.one().getUrl('administrationCrop') }}>
                    <h3 class="text-wh-blue text-[0.6rem]">{{ member.tag }} {{ member.title }}</h3>
                </a>
            {% endfor %}
        {% endcache %}
        </div>
    </section>
{% endblock content %}