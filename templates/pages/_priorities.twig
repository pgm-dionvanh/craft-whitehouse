{% set priorityCases = craft.entries.section('priorityCase').all() %}

{% extends "/layouts/_main" %}

{% block content %}
<section class="mt-32 m-auto max-w-7xl md:max-w-screen-md">
    <h1 class="text-wh-blue text-center text-5xl font-bold mb-12">{{ entry.title }}</h1>
    <span class="text-wh-blue text-2xl">
        {{ entry.richText }}
    </span>
    <div class="relative flex py-5 m-auto items-center w-1/3">
        <div class="flex-grow border-t-2 border-black"></div>
    </div>
    <div class="mt-4">
        {% for priorityCase in priorityCases %}
        <article>
            <h1 class="text-wh-blue text-2xl font-bold mb-4">{{ priorityCase.title }}</h1>
            <span class="text-wh-blue text-md">
                {{ priorityCase.richText }}
            </span>
            {% if not loop.last %}
            <div class="relative flex py-5 m-auto items-center w-1/3">
                <div class="flex-grow border-t-2 border-black"></div>
            </div> 
            {% endif %}       
        </article>
        {% endfor %}
    </div>
</section>
{% endblock content %}